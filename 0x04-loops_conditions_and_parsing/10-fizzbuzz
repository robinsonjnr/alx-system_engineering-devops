#!/usr/bin/env bash
# this script is displaying 'best school' 10 times
i=1
while [ "$i" -le 100 ]
do
    if [ $((i % 15)) -eq 0 ]
    then
        echo "FizzBuzz"
    elif [ $((i % 5)) -eq 0 ]
    then
        echo "Buzz"
    elif [ $((i % 3)) -eq 0 ]
    then
        echo "Fizz"
    else
        echo "$i"
    fi
    i=$((i + 1))
done
i=$i
